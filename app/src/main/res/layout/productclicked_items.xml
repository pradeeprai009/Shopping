<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_margin="5dp"
    android:orientation="vertical"
    >
    <RelativeLayout
        android:id="@+id/thumbnail2"
        android:orientation="horizontal"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_alignParentLeft="true"
        android:layout_marginRight="7dip"
        >

        <ImageView
            android:id="@+id/buy_phone_image"
            android:layout_width="90dp"
            android:layout_height="190dp"
            android:layout_marginLeft="10dp"
            android:src="@drawable/images_logo"
            />
        <TextView
            android:id="@+id/buy_name_mobile"
            android:layout_width="130dp"
            android:layout_height="30dp"
            android:layout_alignParentTop="true"
            android:text="Name"
            android:layout_marginTop="15dp"
            android:textAlignment="textStart"
            android:textColor="#040404"
            android:textSize="15sp"
            android:layout_marginLeft="130dp"
            android:typeface="sans"
            android:gravity="start" />
        <TextView
            android:layout_width="12dp"
            android:layout_height="20dp"
            android:layout_marginRight="2dp"
            android:layout_marginLeft="130dp"
            android:textAlignment="textEnd"
            android:layout_marginTop="51dp"
            android:hint="@string/Rs"
            android:textColorHint="#000000"
            android:gravity="end" />
        <TextView
            android:id="@+id/buy_price_mobile"
            android:layout_width="130dp"
            android:layout_height="30dp"
            android:layout_marginTop="50dp"
            android:textAlignment="textStart"
            android:layout_marginLeft="143dp"
            android:text="Rs. Price"
            android:textColor="#1d1d1d"
            android:textSize="15sp"
            android:gravity="start" />

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal">

            <TextView
                android:id="@+id/buy_details"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginLeft="130dp"
                android:layout_marginTop="80dp"
                android:layout_marginRight="10dp"
                android:gravity="start"
                android:inputType="textMultiLine"
                android:maxLines="2"
                android:minLines="2"
                android:text="Details"
                android:textAlignment="textStart"
                android:textColor="#000000" />

        </LinearLayout>
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:layout_marginLeft="80dp"
            android:layout_marginTop="130dp">

            <Button
                android:id="@+id/addtocart"
                android:layout_width="120dp"
                android:layout_height="wrap_content"
                android:layout_marginLeft="25dp"
                android:layout_marginTop="15dp"
                android:background="#7D3C98"
                android:text="Add To Cart"
                android:textAlignment="center"
                android:textColor="#FDFEFE"
                android:gravity="center"  />
            <Button
                android:id="@+id/adapter_buynow"
                android:layout_width="120dp"
                android:layout_height="wrap_content"
                android:layout_marginLeft="5dp"
                android:layout_marginTop="15dp"
                android:background="#DC7633"
                android:text="Buy Now"
                android:textAlignment="center"
                android:textColor="#FDFEFE"
                android:gravity="center" />
        </LinearLayout>
    </RelativeLayout>


</RelativeLayout>