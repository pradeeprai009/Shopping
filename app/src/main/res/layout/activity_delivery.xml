<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:layout_margin="10dp"
    tools:context=".Activity.Delivery">
   <ScrollView
       android:layout_width="match_parent"
       android:layout_height="match_parent"
       >
       <LinearLayout
           android:layout_width="match_parent"
           android:layout_height="match_parent"
           android:orientation="vertical">
           <EditText
               android:layout_width="match_parent"
               android:id="@+id/full_address"
               android:layout_height="wrap_content"
               android:hint="Full Address"
               android:inputType="textMultiLine"
               android:maxLines="4"
               android:textAlignment="textStart"
               android:minLines="3"
               android:textColor="#7D3C98"
               android:gravity="start" />
           <RelativeLayout
               android:orientation="horizontal"
               android:layout_width="match_parent"
               android:layout_height="match_parent"
               android:layout_alignParentLeft="true"
               android:layout_marginRight="7dip"
               >

               <ImageView
                   android:id="@+id/dil_phone_image"
                   android:layout_width="70dp"
                   android:layout_height="120dp"
                   android:layout_marginLeft="10dp"
                   android:src="@drawable/images_logo"
                   />
               <TextView
                   android:id="@+id/dil_name_mobile"
                   android:layout_width="130dp"
                   android:layout_height="30dp"
                   android:layout_alignParentTop="true"
                   android:text="Name"
                   android:layout_marginTop="10dp"
                   android:textStyle="bold"
                   android:textAlignment="textStart"
                   android:textColor="#040404"
                   android:textSize="15sp"
                   android:layout_marginLeft="120dp"
                   android:typeface="sans"
                   android:gravity="start" />
               <TextView
                   android:layout_width="12dp"
                   android:layout_height="20dp"
                   android:layout_marginRight="2dp"
                   android:layout_marginLeft="230dp"
                   android:textAlignment="textEnd"
                   android:layout_marginTop="9dp"
                   android:hint="@string/Rs"
                   android:textColorHint="#000000"
                   android:gravity="end" />

               <LinearLayout
                   android:layout_width="match_parent"
                   android:layout_height="wrap_content"
                   android:orientation="horizontal">

                   <TextView
                       android:id="@+id/dil_buy_details"
                       android:layout_width="match_parent"
                       android:layout_height="wrap_content"
                       android:layout_marginLeft="120dp"
                       android:layout_marginTop="40dp"
                       android:layout_marginRight="10dp"
                       android:inputType="textMultiLine"
                       android:maxLines="2"
                       android:minLines="2"
                       android:text="Details"
                       android:textStyle="bold"
                       android:textAlignment="textStart"
                       android:textColor="#000000"
                       android:gravity="start" />
               </LinearLayout>
               <TextView
                   android:id="@+id/dil_price_mobile"
                   android:layout_width="130dp"
                   android:layout_height="30dp"
                   android:layout_marginTop="8dp"
                   android:textAlignment="textStart"
                   android:textStyle="bold"
                   android:layout_marginLeft="245dp"
                   android:text="Rs. Price"
                   android:textColor="#1d1d1d"
                   android:textSize="15sp"
                   android:gravity="start" />
               <TextView
                   android:layout_width="match_parent"
                   android:layout_height="wrap_content"
                   android:text="Delivery in 4 Days | 40 Rs Delivery Charges"
                   android:layout_marginTop="130dp"
                   android:layout_marginLeft="10dp"
                   android:textColor="#000000"/>
               <View
                   android:layout_width="170dp"
                   android:layout_height="2dp"
                   android:layout_marginLeft="144dp"
                   android:layout_marginTop="141dp"
                   android:background="@android:color/background_dark"/>
           </RelativeLayout>
               <LinearLayout
                   android:layout_width="match_parent"
                   android:layout_height="wrap_content"
                   android:orientation="horizontal"
                   android:layout_marginTop="10dp"
                   android:weightSum="2">
                   <TextView
                       android:layout_width="140dp"
                       android:layout_height="25dp"
                       android:layout_weight="1"
                       android:text="Price"
                       android:textSize="15sp"
                       android:textColor="#27AE60"
                       android:textStyle="bold"
                       android:textAlignment="textStart"
                       android:gravity="start" />
                   <TextView
                       android:layout_width="140dp"
                       android:layout_height="25dp"
                       android:layout_weight="1"
                       android:hint="Rs. 9999"
                       android:textSize="15sp"
                       android:id="@+id/dil_price"
                       android:textColor="#27AE60"
                       android:textStyle="bold"
                       android:textAlignment="textEnd"
                       android:gravity="end" />

               </LinearLayout>
           <View
               android:layout_width="match_parent"
               android:layout_height="1dp"
               android:layout_marginTop="2sp"
               android:background="@android:color/darker_gray"/>
               <LinearLayout
                   android:layout_width="match_parent"
                   android:layout_height="wrap_content"
                   android:orientation="horizontal"
                   android:layout_marginTop="10dp"
                   android:weightSum="2">
                   <TextView
                       android:layout_width="140dp"
                       android:layout_height="25dp"
                       android:layout_weight="1"
                       android:text="Delivery"
                       android:textSize="15sp"
                       android:textColor="#27AE60"
                       android:textStyle="bold"
                       android:textAlignment="textStart"
                       android:gravity="start"/>
                   <TextView
                       android:layout_width="140dp"
                       android:layout_height="25dp"
                       android:layout_weight="1"
                       android:text="Free"
                       android:textSize="15sp"
                       android:id="@+id/dil_charges"
                       android:textColor="#27AE60"
                       android:textStyle="bold"
                       android:textAlignment="textEnd"
                       android:gravity="end" />

               </LinearLayout>
           <View
               android:layout_width="match_parent"
               android:layout_height="1dp"
               android:layout_marginTop="2sp"
               android:background="@android:color/darker_gray"/>
               <LinearLayout
                   android:layout_width="match_parent"
                   android:layout_height="wrap_content"
                   android:orientation="horizontal"
                   android:layout_marginTop="10dp"
                   android:weightSum="2">
                   <TextView
                       android:layout_width="140dp"
                       android:layout_height="25dp"
                       android:layout_weight="1"
                       android:text="Amount Payable"
                       android:textColor="#27AE60"
                       android:textStyle="bold"
                       android:textSize="15sp"
                       android:textAlignment="textStart"
                       android:gravity="start" />
                   <TextView
                       android:layout_width="140dp"
                       android:layout_height="25dp"
                       android:layout_weight="1"
                       android:hint="Rs. 9,999/-"
                       android:textSize="15sp"
                       android:id="@+id/amount_payable"
                       android:textColor="#27AE60"
                       android:textStyle="bold"
                       android:textAlignment="textEnd"
                       android:gravity="end" />
               </LinearLayout>
           <View
               android:layout_width="match_parent"
               android:layout_height="1dp"
               android:layout_marginTop="2sp"
               android:background="@android:color/darker_gray"/>
               <LinearLayout
                   android:layout_width="match_parent"
                   android:layout_height="match_parent"
                   android:orientation="horizontal"
                   android:gravity="bottom"
                   android:layout_gravity="bottom"
                   android:layout_marginTop="10dp"
                   android:weightSum="2">
                       />
                   <Button
                       android:layout_width="160dp"
                       android:layout_height="35dp"
                       android:layout_gravity="bottom"
                       android:gravity="center"
                       android:background="#DC7633"
                       android:textSize="15sp"
                       android:layout_weight="1"
                       android:layout_marginRight="5dp"
                       android:textColor="#000000"
                       android:textStyle="bold"
                       android:id="@+id/dil_continue"
                       android:text="Cancel"/>
                   <Button
                       android:layout_width="160dp"
                       android:layout_height="35dp"
                       android:layout_gravity="bottom"
                       android:gravity="center"
                       android:background="#DC7633"
                       android:textSize="15sp"
                       android:layout_marginLeft="5dp"
                       android:layout_weight="1"
                       android:textColor="#000000"
                       android:textStyle="bold"
                       android:id="@+id/place_order"
                       android:text="Place Order"/>
               </LinearLayout>

       </LinearLayout>
   </ScrollView>
</RelativeLayout>